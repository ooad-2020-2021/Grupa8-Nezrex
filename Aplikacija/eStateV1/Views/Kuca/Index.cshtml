@model IEnumerable<eStateV1.Models.Kuca>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kuce</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cijena)
            </th>
    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cijena)
            </td>
            <td>
                <!--<a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |-->
                <a asp-action="Details" asp-route-id="@item.Id">Pogledaj detalje</a> 
                <!--<a asp-action="Delete" asp-route-id="@item.Id">Obriši nekretninu</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
